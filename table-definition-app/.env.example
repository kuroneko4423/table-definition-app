# Supabase Database Configuration
# Copy this file to .env and fill in your actual values

# Supabase database host
# Example: aws-0-ap-northeast-1.pooler.supabase.com (for Pooler)
# Example: db.your-project-id.supabase.co (for direct connection)
SUPABASE_DB_HOST=db.your-project.supabase.co

# Database port
# Default: 5432 (direct connection)
# Pooler: 6543
SUPABASE_DB_PORT=5432

# Database name (usually 'postgres' for Supabase)
SUPABASE_DB_NAME=postgres

# Database username
# Format: postgres.your-project-id (when using Pooler)
# Format: postgres (when using direct connection)
SUPABASE_DB_USERNAME=postgres

# Database password
# Get this from Supabase Dashboard > Settings > Database > Connection string
SUPABASE_DB_PASSWORD=your-supabase-password

# Spring Profile Configuration
# Use 'prod' for production environment with PostgreSQL
# Use 'dev' for development environment with H2 (default)
SPRING_PROFILES_ACTIVE=prod